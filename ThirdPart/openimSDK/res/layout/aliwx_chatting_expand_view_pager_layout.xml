<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="gone"
    android:orientation="vertical">

    <com.alibaba.mobileim.kit.widget.WrapContentHeightViewPager
        android:id="@+id/reply_bar_expand_viewpager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.alibaba.mobileim.kit.chat.view.CirclePageIndicator
        android:id="@+id/reply_bar_expand_viewpager_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="3dp"/>

</LinearLayout>