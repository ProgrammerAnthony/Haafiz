<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="48dp">

    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:text="我的频道"
        android:textColor="@color/common_tv_grey"
        android:textSize="16sp"
     />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tv"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@id/tv"
        android:text="长按编辑 拖拽排序"
        android:textColor="@color/common_tv_grey"
        android:textSize="12sp"
      />

    <TextView
        android:id="@+id/tv_btn_edit"
        android:layout_width="56dp"
        android:layout_height="30dp"
        android:layout_toLeftOf="@+id/tv_btn_back"
        android:layout_centerVertical="true"
        android:layout_marginRight="8dp"
        android:background="@drawable/prj_btn_round_transparent_bg"
        android:gravity="center"
        android:text="编辑"
        android:textColor="@color/app_primary"
        android:textSize="13sp"
     />

    <TextView
        android:id="@+id/tv_btn_back"
        android:layout_width="56dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="8dp"
        android:background="@drawable/prj_btn_round_transparent_bg"
        android:gravity="center"
        android:text="返回"
        android:textColor="@color/app_primary"
        android:textSize="13sp"
  />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:layout_alignParentBottom="true"
        android:background="@color/gray_btn_bg_color" />
</RelativeLayout>
