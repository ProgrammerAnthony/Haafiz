<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">




    <com.anthony.segmentcontrol.SegmentControl
        android:id="@+id/segment_control"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_weight="2"
        android:textSize="20sp"
        app:block_direction="horizon"
        app:cornerRadius="5dip"
        app:horizonGap="8dip"
        app:normalColor="#FFFFFF"
        app:sc_selectedColor="@color/app_primary"
        app:texts="segment1|segment2|segment3"
        app:verticalGap="8dip" />

    <FrameLayout
        android:id="@+id/child_fragment_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="35" />

</LinearLayout>
