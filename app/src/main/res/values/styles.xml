    <style name="LibMatchMatch.Vertical">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="LibMatchWrap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="LibMatchWrap.Horizontal">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="LibMatchWrap.Vertical">
        <item name="android:orientation">vertical</item>
    </style>


    <style name="LibWrapAuto">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="LibWrapAuto.Horizontal">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="LibWrapAuto.Vertical">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="LibWrapMatch">
