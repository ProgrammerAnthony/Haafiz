<?xml version="1.0" encoding="utf-8"?>
<resources>

  <declare-styleable name="ForegroundLayout">
    <attr name="android:foreground"/>
    <attr name="android:foregroundInsidePadding"/>
    <attr name="android:foregroundGravity"/>
  </declare-styleable>

  <declare-styleable name="ForegroundImageView">
    <attr name="android:foreground"/>
  </declare-styleable>

  <declare-styleable name="SwipeRefreshLayout">
    <attr name="srl_direction">
      <enum name="top" value="0"/>
      <enum name="bottom" value="1"/>
      <enum name="both" value="2"/>
    </attr>
  </declare-styleable>

  <declare-styleable name="NineGirdView">
    <attr format="dimension" name="ngGap"/>
    <attr format="integer" name="ngMaxSize"/>
    <attr format="dimension" name="ngSingleSize"/>
    <attr name="ngStyle">
      <enum name="grid" value="0"/>
      <enum name="fill" value="1"/>
    </attr>
  </declare-styleable>

  <declare-styleable name="CellsTheme">
    <attr format="color" name="cellHeaderColor"/>
    <attr format="color" name="cellTextColor"/>
    <attr format="color" name="cellTextHintColor"/>
    <attr format="color" name="cellValueColor"/>
    <attr format="color" name="cellDetailColor"/>
    <attr format="color" name="cellInfoColor"/>
    <attr format="color" name="cellLinkTextColor"/>
    <attr format="color" name="cellDividerColor"/>
  </declare-styleable>

  <declare-styleable name="SupportButton">
    <attr format="color" name="supportButtonRippleColor"/>
    <attr format="color" name="supportButtonPressedColor"/>
    <attr format="color" name="supportButtonDisabledColor"/>
    <attr format="color" name="supportButtonNormalColor"/>
    <attr format="dimension" name="supportButtonCornerRadius"/>
  </declare-styleable>
</resources>